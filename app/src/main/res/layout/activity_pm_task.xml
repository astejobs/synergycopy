<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#e2e2e2"
    android:orientation="vertical"
    tools:context=".EquipmentSearch.PmTaskActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/pmtool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCodeSchemeApp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu"
        app:title="PM Task"
        app:titleMargin="8dp"
        app:titleTextColor="#ffffff" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="8dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="16sp" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textViewTaskNumberPm"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:hint="Task Number"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="16sp" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textViewScheduleNumberPm"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:hint="Schedule Number"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="16sp" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textViewBuildingNumberPm"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:hint="Building"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="16sp" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textViewLocationNumberPm"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:hint="Location"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="16sp" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textViewEquipmentPm"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:hint="Equipment"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="16sp" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textViewBriefDescriptionPm"
                    android:layout_width="match_parent"
                    android:hint="Brief Description"
                    android:textColor="#000000"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="16sp" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textViewScheduleDatePm"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:hint="Schedule Date"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="16sp" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/date_picker_pmtasksPm"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:hint="Completed Date"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="16sp" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/time_picker_pmtasks"
                    android:layout_width="match_parent"
                    android:hint="Completed Time"
                    android:textColor="#000000"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="16sp" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/namePmTasks"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:hint="Completed By"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textSize="16sp" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/remarks_pmTasks"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:hint="Remarks"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:hint="Status">
                <AutoCompleteTextView
                    android:id="@+id/spinner_status_pmtasks"
                    android:layout_width="match_parent"
                    android:inputType="none"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonCheckList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:shadowColor="#c4c9d6"
                android:text="View Checklist"
                android:textColor="@color/textColorbutton" />

            <Button
                android:id="@+id/buttonUpdateTaskPm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:shadowColor="#c4c9d6"
                android:text="Update Task"
                android:textColor="@color/textColorbutton" />

        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>
</LinearLayout>